# Utils
alias mkdir='mkdir -p'
alias no='nodemon -e js,coffee,json --verbose'
alias watch='watch --no-title'
alias w='watch --no-title'
alias static='static --port 4000 --host-address 0.0.0.0'

# apps
alias g="git"
alias be="bundle exec"
alias vt="vagrant"
alias teamocil="teamocil --here"
alias tm="teamocil --here"
alias t="tmux"
alias ta="tmux attach -t"
alias tl="tmux list-sessions"
alias tk="tmux kill-session -t"
alias kt="killall tmux"
alias wr="wr --exec"
alias ip="curl ifconfig.me/ip"

alias tnd="tmux rename-window -t${TMUX_PANE} `basename $PWD`"

# Versal
alias rapi="sbt container:start console"
alias v="versal"
alias vp="versal preview"

# Some convenient single letters
alias f="fig"
alias d="docker"

# ST2 always in a new window
alias subl="subl -n"
alias s="subl -n"

alias emacs="echo fuck off"
