# Utils
alias mkdir='mkdir -p'
alias no='nodemon -e js,coffee,json --verbose'
alias watch='watch --no-title'

# apps
alias g="git"
alias be="bundle exec"
alias t="tmux"
alias ta="tmux attach"
alias tl="tmux list-sessions"
alias tk="tmux kill-session -t"
alias kt="killall tmux"
alias wr="wr --exec"
alias ip="curl ifconfig.me/ip"
alias tnd="tmux_name_window_after_directory"

# Versal
alias v="versal"
alias vp="versal preview"
alias web="cd ~/code/versal.com && nvm use 0.10 && ulimit -n 4096"
alias wall="web && grunt && vagrant rsync"
alias wtest="web && grunt clientTest"
alias wbuild="web && grunt buildClient && vagrant rsync"

# Some convenient single letters
alias f="fig"
alias d="docker"

# ST2 always in a new window
alias subl="subl -n"
alias s="subl -n"
