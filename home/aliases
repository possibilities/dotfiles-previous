# Utils
alias mkdir='mkdir -p'
alias no='nodemon -e js,coffee,json --verbose'
alias watch='watch --no-title'
alias zh='cat $HOME/.zsh_history'

# apps
alias g="git"
alias clone="hub clone"
alias req="lab merge-request"
alias t="tmux"
alias ta="tmux attach"
alias ip="curl ifconfig.me/ip"
alias tnd="tmux_name_window_after_directory"
alias tn="tmux_name_window"
alias gh="grep_history"
alias gist="gist --open --private"

alias k="kubectl"

# For windows/putty
alias tmux="TERM=screen-256color-bce tmux"

alias loadagent="eval $(ssh-agent -s) ; ssh-add ~/.ssh/id_rsa"
alias loaddev="tmuxp load dev"
alias wip="git add .; git commit -am 'wip'"
