[diff]
    tool = opendiff

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore_global

[alias]
    st = status
    ci = commit
    cp = cherry-pick
    ciok = commit --no-verify
    br = branch -v
    df = diff
    dfc = diff --cached
    co = checkout
    pl = log --pretty=oneline
    tree = log --graph --pretty=oneline --decorate
    pom = push origin master
    amend = commit --amend -C HEAD
    s = stash --include-untracked
    sa = stash apply
    sk = stash --include-untracked --keep-index
    pf = push --force-with-lease
    pr = pull-request -o

    l  = log --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
    lg = log --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset' --graph
    lga = log --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset' --graph --all
    sp = smart-pull
    sl = smart-log
    sm = smart-merge

[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = red
    untracked = cyan

[apply]
    whitespace = fix

